<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>kilkenny</title>
</head>
<body>
  <h1>Applicant List</h1>
  <a href="/create">Create</a>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @list.each do |data| %>
      <tr>
        <td><%= data.id %></td>
        <td><%= data.name %></td>
        <td>
          <%= @statuses[data.status] %>
        </td>
        <td>
          <a href="/<%= data.id %>/edit">Edit</a>
          <%= form_with url: "/delete" do |form| %>
            <input type="hidden" name="id" value="<%= data.id %>">
            <input type="submit" value="Delete">
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</body>
</html>