<header class="header">
  <h1>Applicant Form</h1>
  <a href="/">List</a>
</header>

<div class="form-wrap">
<%= form_with scope: :applicant, url: @action do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, :placeholder => "Enter the name." %>
  </div>
  <div>
    <%= form.label :status %>
    <%= form.collection_select :status, Status.order(:id), :id, :label %>
  </div>
  <div>
    <%= form.hidden_field :id %>
    <%= form.submit "Submit", :class => "btn btn-create" %>
  </div>
<% end %>
</div>